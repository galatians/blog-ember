<div class="row">
  <div class="span9">

    <div class="posts">
      {{#each posts as |post|}}
        <div class="post">
          <h2>{{#link-to 'post' post}}{{post.title}}{{/link-to}}</h2>
          <h4>Published: {{date-format post.date}}</h4>
          <p>{{post.body}}</p>
        </div>
      {{/each}}
    </div>

  </div>

  <div class="span3">
    Search Titles: {{input type="text" id="search-posts" value=postsFilter}}
  </div>

</div>